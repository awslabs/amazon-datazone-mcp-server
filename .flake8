[flake8]
exclude =
    .venv,
    venv,
    build,
    dist,
    static/,
    docs/_build/,
    */site-packages/*

# Add extra rules to Flake8's own default ignore list
extend-ignore =
    W293,
    W504,
    W291,
    W292,
    W391,
    E501,
    F401,
    F403,
    E203,
    E231,
    E302,
    E303,
    E305,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107,
    D200,
    D201,
    D202,
    D203,
    D204,
    D205,
    D206,
    D207,
    D208,
    D209,
    D210,
    D211,
    D212,
    D213,
    D214,
    D215,
    D300,
    D301,
    D400,
    D401,
    D402,
    D403,
    D404,
    D405,
    D406,
    D407,
    D408,
    D409,
    D410,
    D411,
    D412,
    D413,
    D414,
    D415,
    D416,
    D417,
    D418,
    D419,
    F541,
    C901,
    F841,
    F821,
    W605,
    E265,
    E125,
    E251,
    F601

# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 10
